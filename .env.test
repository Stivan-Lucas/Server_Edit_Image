# --- Server ---
HOST=localhost
PORT=4000
APP_NAME=EditPDFAppTest
APP_VERSION=0.1.0
NODE_ENV=test

# --- Cors ---
CORS_ORIGIN=*

# --- Logging ---
LOG_LEVEL=error
LOG_DIR=./logs/test
LOG_PRETTY_COLORIZE=false
LOG_PRETTY_TRANSLATE_TIME=SYS:yyyy-mm-dd HH:MM:ss
LOG_PRETTY_IGNORE=pid,hostname
LOG_PRETTY_SINGLE_LINE=true
LOG_FILE_MAX_DAYS=7d
LOG_FILE_ZIPPED=true
LOG_REDACT_PATHS=req.headers.authorization,*.password,req.headers.cookie,req.headers["x-api-key"]

# --- File Upload ---
MAX_FILE_SIZE=10485760 # 10MB

# --- Database (Postgres) ---
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
POSTGRES_DB=edit_pdf_app_test
POSTGRES_HOST=localhost
POSTGRES_PORT=33337

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=2547
REDIS_PASSWORD=

# --- JWT ---
JWT_SECRET=testsecretkeythatisatleast32chars!
JWT_EXPIRES_IN=15m
REFRESH_SECRET=testrefreshsecretkeythatissecure
REFRESH_EXPIRES_IN=7d

# --- Rate Limit ---
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_BAN=5
RATE_LIMIT_CACHE=50
RATE_LIMIT_NAMESPACE=global_test
RATE_LIMIT_INFO_MESSAGE=Test rate limit approaching
